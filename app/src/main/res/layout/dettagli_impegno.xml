<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:background="#E8D7D7"
    android:elevation="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layoutDirection="ltr"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/dettagli_titolo"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/asap"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="Titolo"
            android:textAlignment="textStart"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/deletedettagli"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="10dp"
            android:background="#00FBFAFA"
            android:foreground="@drawable/trash"
            android:foregroundTint="#0C0C0C"
            android:foregroundTintMode="src_in"
            android:paddingRight="10dp" />
    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dettagli_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Data" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dettagli_ora"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Ora" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dettagli_descrizione"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Descrizione" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dettagli_luogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Luogo" />

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/toolbar_calendar"
        android:foregroundTint="#ED0E0E" />

</LinearLayout>