<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sfondo_orange_profilo"
        tools:context=".ui.account.AccountFragment">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="387dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewpedina">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/cambianickname"
                    android:layout_width="204dp"
                    android:layout_height="34dp"
                    android:fontFamily="@font/asap"
                    android:text="@string/cambia_nickname"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="#F8F2F2"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:backgroundTint="#00FFFFFF"
                    app:cornerRadius="0dp">

                </com.google.android.material.textview.MaterialTextView>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_nickname"
                    android:layout_width="181dp"
                    android:layout_height="59dp"
                    android:backgroundTint="#FFFFFF"
                    android:drawableTint="#FFFFFF"
                    android:fontFamily="@font/asap"
                    android:foregroundTint="#FFFFFF"
                    android:inputType="textPersonName"
                    android:text="@string/nickname"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold">

                </com.google.android.material.textfield.TextInputEditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cambiaNomeFamiglia2"
                    android:layout_width="186dp"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:text="@string/cambia_nomeFamiglia"
                    android:textAlignment="center"
                    android:textColor="#F8F2F2"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_family"
                    android:layout_width="174dp"
                    android:layout_height="59dp"
                    android:backgroundTint="#FFFFFF"
                    android:drawableTint="#FFFFFF"
                    android:fontFamily="@font/asap"
                    android:foregroundTint="#FFFFFF"
                    android:inputType="textPersonName"
                    android:text="@string/family_name"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold">

                </com.google.android.material.textfield.TextInputEditText>
            </LinearLayout>

            <TextView
                android:id="@+id/cambiaNomeFamiglia"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="@string/componenti"
                android:textAlignment="center"
                android:textColor="#F8F2F2"
                android:textSize="24sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvprofile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center" />

        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/cambiapedina"
            android:layout_width="301dp"
            android:layout_height="38dp"
            android:fontFamily="@font/asap"
            android:text="@string/cambia_pedina"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#F8F2F2"
            android:textSize="24sp"
            android:textStyle="bold"
            app:backgroundTint="#00FFFFFF"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/but_cambiaFoto"
            app:layout_constraintVertical_bias="0.071">

        </com.google.android.material.textview.MaterialTextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"></LinearLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="158dp"
            android:layout_height="158dp"
            android:background="#FFAC31"
            android:contentDescription="TODO"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.027"
            app:srcCompat="@android:drawable/gallery_thumb"
            app:tint="#AFAFAF" />

        <ImageView
            android:id="@+id/sx"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="TODO"
            android:rotationY="180"
            android:src="@drawable/right_arrow"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewpedina"
            app:layout_constraintEnd_toStartOf="@+id/imageViewpedina"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageViewpedina"
            app:tint="#FFFFFF" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/but_cambiaFoto"
            android:layout_width="190dp"
            android:layout_height="56dp"
            android:fontFamily="@font/asap"
            android:padding="10dp"
            android:text="@string/cambia"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#FFAC31"
            app:cornerRadius="5dp"
            app:iconSize="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:layout_constraintVertical_bias="0.00999999">

        </com.google.android.material.button.MaterialButton>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="127dp"
            android:layout_height="115dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/imageView3"
            app:srcCompat="@drawable/user_white" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:backgroundTint="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_menu_camera"
            app:tint="#FFFFFF" />

        <ImageView
            android:id="@+id/imageViewpedina"
            android:layout_width="77dp"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            android:src="@drawable/lion"
            app:layout_constraintBottom_toBottomOf="@+id/dx"
            app:layout_constraintEnd_toStartOf="@+id/dx"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/sx"
            app:layout_constraintTop_toTopOf="@+id/dx" />

        <ImageView
            android:id="@+id/dx"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="#FFFFFF"
            android:contentDescription="TODO"
            android:foregroundTint="#FFFFFF"
            android:src="@drawable/right_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageViewpedina"
            app:layout_constraintTop_toBottomOf="@+id/cambiapedina"
            app:layout_constraintVertical_bias="0.01999998"
            app:tint="#FFFFFF" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>