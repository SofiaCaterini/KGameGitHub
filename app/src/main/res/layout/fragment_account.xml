<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo_orange_profilo"
    tools:context=".ui.account.AccountFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/cambiapedina"
        android:layout_width="317dp"
        android:layout_height="89dp"
        android:fontFamily="@font/asap"
        android:padding="20dp"
        android:text="@string/cambia_pedina"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#F8F2F2"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="#00FFFFFF"
        app:cornerRadius="0dp"
        app:iconPadding="8dp"
        app:iconSize="40dp"
        app:iconTint="#171616"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="190dp">

    </com.google.android.material.textview.MaterialTextView>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="67dp"
        android:layout_height="70dp"
        android:rotationY="180"
        android:src="@drawable/right_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cambia"
        android:layout_width="207dp"
        android:layout_height="115dp"
        android:fontFamily="@font/asap"
        android:padding="20dp"
        android:text="@string/cambia"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#0C0C0C"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="#F6F3F3"
        app:cornerRadius="5dp"
        app:iconSize="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.76">

    </com.google.android.material.button.MaterialButton>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cambia2"
        android:layout_width="317dp"
        android:layout_height="89dp"
        android:fontFamily="@font/asap"
        android:padding="20dp"
        android:text="@string/famiglia"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#0C0C0C"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="#F6F3F3"
        app:cornerRadius="5dp"
        app:icon="@drawable/plus"
        app:iconPadding="8dp"
        app:iconSize="40dp"
        app:iconTint="#171616"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="611dp">

    </com.google.android.material.button.MaterialButton>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView"
        android:layout_width="140dp"
        android:layout_height="157dp"
        android:adjustViewBounds="false"
        android:background="#FAF8F8"
        android:src="@drawable/user"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cambia"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04000002" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="103dp"
        android:layout_height="106dp"
        android:layout_margin="15dp"
        android:src="@drawable/lion"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toStartOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView4" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="67dp"
        android:layout_height="70dp"
        android:src="@drawable/right_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        tools:layout_editor_absoluteY="297dp" />

</androidx.constraintlayout.widget.ConstraintLayout>