<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/numero"
        android:layout_width="59dp"
        android:layout_height="55dp"
        android:fontFamily="@font/asap"
        android:gravity="clip_vertical"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp"
        android:text="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/nickname2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nickname2"
        android:layout_width="130dp"
        android:layout_height="34dp"
        android:fontFamily="@font/asap"
        android:gravity="clip_vertical"
        android:paddingTop="5dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp"
        android:text="@string/nickname"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:flow_horizontalAlign="center"
        android:flow_verticalAlign="center"
        app:layout_constraintBottom_toBottomOf="@+id/numero"
        app:layout_constraintEnd_toStartOf="@+id/pedina"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/numero"
        app:layout_constraintTop_toTopOf="@+id/numero" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/pedina"
        android:layout_width="35dp"
        android:layout_height="41dp"
        android:backgroundTint="#EFE9E9"
        android:padding="2dp"
        app:icon="@drawable/lion"
        app:iconSize="50dp"
        app:iconTintMode="add"
        app:layout_constraintBottom_toBottomOf="@+id/nickname2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/nickname2"
        app:layout_constraintTop_toTopOf="@+id/nickname2"
        app:layout_constraintVertical_bias="0.571"
        app:srcCompat="@drawable/lion" />

</androidx.constraintlayout.widget.ConstraintLayout>